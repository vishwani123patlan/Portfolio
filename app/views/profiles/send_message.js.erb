<% if @mail_send %>
  $('#success-mail-alert').show();
  $('#success-mail-alert').fadeOut(2000);
  $("#contact-form-section").html('<%= j render partial: 'profiles/contact_form'%>');
<% else %>
  $('#fail-mail-alert').show();
  $('#fail-mail-alert').fadeOut(2000);
  $("#contact-form-section").html('<%= j render partial: 'profiles/contact_form'%>');
<% end %>
