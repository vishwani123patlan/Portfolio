<div class="container-fluid">
  <h1 class="text-center" style="font-weight: bolder; color: #521634b5;">LATEST BLOGS</h1>
  <div class="row" style="display: flex; flex-direction: row;justify-content: space-evenly;">
    <% @last_posts.each do |post| %>
      <%= link_to(post, class: "col-md-4 col-12 blog_card") do %> 
        <div>
          <div class="card bg-dark text-white card_blog">
            <%= image_tag(post.image.present? ? post.image : " ", class: 'card-img', style: 'width: 100%') %>
            <div class="card-img-overlay">
              <h5 class="card-title"><%= post.title %></h5>
              <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
              <p class="card-text">Last updated 3 mins ago</p>
            </div>
        </div>
    </div>
    <% end %>
   <% end %> 
  </div>
</div>