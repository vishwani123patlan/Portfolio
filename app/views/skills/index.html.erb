<div class="main-about-page">
  <%= render 'layouts/navbar' %>
    <div class="container-fluid ">
      <div class="row text-center p-1  align-items-center ">
        <div class="col-2">
          <%= link_to ('<i class="fa fa-arrow-left"></i>').html_safe, root_path, class:"mx-5 text-white fs-2 align-items-start "%> 
        </div>
        <div class="col-8">
          <h2 class="text-center">MY SKILLS</h2>    
        </div>
      </div>
    </div>
      <hr class="featurette-divider mx-5 text-light">
        <div class="container marketing mb-5">
          <div class="row text-center">
            <% @skills.each do |s|%>
              <div class="col-lg-4 my-5">
                <% if s.image.attached? %>
                    <%= image_tag s.image,class:"bd-placeholder-img rounded-circle", style: "width: 180px; height: 180px;" %>
                  <%end%>
                <h2><%= s.skill_name %></h2>
                <p><%= truncate(strip_tags(s.about),length: 120) %></p>
                <%= link_to "View Â»", skill_path(s.id), class: "btn btn-outline-light d-grid gap-2 d-md-block" %>
              </div><!-- /.col-lg-4 -->
            <%end%>
          </div>
        </div>
      <hr class="featurette-divider mx-5 text-light">  
    </div>  
</div>