<div class="main-page">
  <div><%= render 'layouts/navbar' %></div>
  <div class="container-fluid my-3 shadow-lg bg-light ">
    <div class="row text-center px-3 align-items-center py-3">
      <div class="col-2 ">
        <%= link_to ('<i class="fa fa-arrow-left"></i>').html_safe, root_path, class:"mx-5 text-dark fs-1 align-items-start "%>
      </div>
      <div class="col-8">
        <h2 class="text-dark">MY SKILLS</h2>
      </div>
      <div class="col-2">
        <img src="<%=asset_path('skill_logo2.png')%>" style= "width: 60px; height: 60px;" >
      </div>
    </div>
  </div>
  <hr class="featurette-divider mx-5 text-light">
      <div class="container marketing mb-5">
        <div class="row text-center">
          <% @skills.each do |s|%>
            <div class="col-lg-4 my-5">
              <% if s.image.attached? %>
                  <%= image_tag s.image,class:"bd-placeholder-img rounded-circle", style: "width: 180px; height: 180px;" %>
                <%end%>
              <h2 class="my-3"><%= s.skill_name %></h2>
              <p><%= truncate(strip_tags(s.about),length: 120) %></p>
              <%= link_to "View Â»", skill_path(s.id), class: "btn btn-outline-light d-grid gap-2 d-md-block" %>
            </div><!-- /.col-lg-4 -->
          <%end%>
        </div>
      </div>
  <hr class="featurette-divider mx-5 text-light">
</div>