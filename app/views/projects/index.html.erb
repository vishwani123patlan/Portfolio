              <% if project.photo.attached? %>
                    <%= image_tag project.photo,class:"bd-placeholder-img rounded-circle", style: "width: 180px; height: 180px;" %>
                  <%end%>

              <h2><%= project.name%></h2>
              <p><%#  = truncate(strip_tags(project.about),length: 120) %></p>
              <p><%= project.url %></p>
              <p><a class="btn btn-outline-light" href="#">View Â»</a></p>
            </div><!-- /.col-lg-4 -->
          <%end%>
        </div><!-- /.row -->
      </div>
      </div>
</div>
