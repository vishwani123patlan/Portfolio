<div class="main-page">
  <div><%= render 'layouts/navbar' %></div>
  <div class="container-fluid my-3 shadow-lg bg-light ">
    <div class="row text-center px-3 align-items-center py-3">
      <div class="col-2 ">
        <%= link_to ('<i class="fa fa-arrow-left"></i>').html_safe, root_path, class:"mx-5 text-dark fs-1 align-items-start "%>
      </div>
      <div class="col-8">
        <h2 class="text-dark">Blogs</h2>
      </div>
    </div>
  </div>
    <hr class="featurette-divider mx-5 text-light">
      <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% @posts.each do |post|%>
          <div class="col">
            <div class="card shadow-sm">
              <% if post.image.attached? %>
                 <%= image_tag post.image, class:"bd-placeholder-img", style: "width: 100%; height: 225px;" %>
                <%end%><text class="text-center fs-3 fw-bold"><%= post.title %></text>
              <div class="card-body">
                <p class="card-text fst-italic"><%= truncate(strip_tags(post.description.to_plain_text),length: 120)%></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                     <%= link_to "View", post_path(post.id), class: "btn btn-outline-dark" %>
                  </div>
                  <small class="text-muted">9 mins</small>
                </div>
              </div>
            </div>
          </div>
        <%end%>
      </div>
    </div>
  <hr class="featurette-divider mx-5 text-light"> 
  </div> 
</div>
<%= link_to 'New Post', new_post_path %>